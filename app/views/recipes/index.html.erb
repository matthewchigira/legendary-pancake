<style>
  .index-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
  }
  .index-header h2 { font-size: 1.75rem; color: var(--dark-brown); }
  .search-bar {
    display: flex;
    gap: 0.75rem;
    margin-bottom: 2rem;
    flex-wrap: wrap;
  }
  .search-bar input[type="text"] {
    flex: 1;
    min-width: 200px;
    padding: 0.5rem 0.75rem;
    border: 1px solid var(--border);
    border-radius: 6px;
    font-size: 0.9rem;
  }
  .search-bar select {
    padding: 0.5rem 0.75rem;
    border: 1px solid var(--border);
    border-radius: 6px;
    font-size: 0.9rem;
    background: white;
  }
  .recipe-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 1.5rem;
  }
  .recipe-card {
    background: white;
    border-radius: 10px;
    padding: 1.25rem;
    box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    border: 1px solid var(--border);
    transition: transform 0.2s, box-shadow 0.2s;
  }
  .recipe-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 16px rgba(0,0,0,0.12);
  }
  .recipe-card h3 {
    margin-bottom: 0.5rem;
    color: var(--dark-brown);
  }
  .recipe-card h3 a { text-decoration: none; color: inherit; }
  .recipe-card h3 a:hover { color: var(--golden); }
  .recipe-card p {
    font-size: 0.9rem;
    color: #666;
    margin-bottom: 0.75rem;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  .recipe-meta {
    display: flex;
    gap: 1rem;
    font-size: 0.8rem;
    color: #888;
    flex-wrap: wrap;
  }
  .badge {
    display: inline-block;
    padding: 0.2rem 0.6rem;
    border-radius: 12px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
  }
  .badge-easy { background: #d4edda; color: #155724; }
  .badge-medium { background: var(--light-amber); color: var(--dark-brown); }
  .badge-hard { background: #f8d7da; color: #721c24; }
  .recipe-count {
    font-size: 0.9rem;
    color: #888;
  }
</style>

<div class="index-header">
  <h2>Pancake Recipes</h2>
  <span class="recipe-count"><%= @recipe_count %> recipes</span>
</div>

<%= form_tag recipes_path, method: :get, class: "search-bar" do %>
  <%= text_field_tag :search, params[:search], placeholder: "Search recipes..." %>
  <%= select_tag :difficulty, options_for_select([["All Difficulties", ""], "easy", "medium", "hard"], params[:difficulty]) %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
  <% if params[:search].present? || params[:difficulty].present? %>
    <%= link_to "Clear", recipes_path, class: "btn btn-secondary" %>
  <% end %>
<% end %>

<div class="recipe-grid">
  <% @recipes.each do |recipe| %>
    <div class="recipe-card">
      <h3><%= link_to recipe.name, recipe %></h3>
      <p><%= recipe.description %></p>
      <div class="recipe-meta">
        <span class="badge badge-<%= recipe.difficulty %>"><%= recipe.difficulty %></span>
        <% if recipe.total_time_minutes > 0 %>
          <span><%= recipe.total_time_minutes %> min</span>
        <% end %>
        <% if recipe.servings %>
          <span><%= recipe.servings %> servings</span>
        <% end %>
        <span>Rating: <%= recipe.average_rating %>/5 (<%= recipe.reviews.size %> reviews)</span>
      </div>
    </div>
  <% end %>
</div>

<% if @recipes.empty? %>
  <p style="text-align: center; color: #888; margin-top: 2rem;">No recipes found. <%= link_to "Create one!", new_recipe_path %></p>
<% end %>
