<style>
  .index-header {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    margin-bottom: 1.5rem;
  }
  .index-header h2 {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--text-primary);
    letter-spacing: -0.025em;
  }
  .search-bar {
    display: flex;
    gap: 0.5rem;
    margin-bottom: 2rem;
    flex-wrap: wrap;
  }
  .search-bar input[type="text"] {
    flex: 1;
    min-width: 200px;
    padding: 0.5rem 0.875rem;
    border: 1px solid var(--border);
    border-radius: var(--radius);
    font-size: 0.875rem;
    font-family: inherit;
    background: var(--surface);
    color: var(--text-primary);
    transition: border-color 0.15s ease, box-shadow 0.15s ease;
  }
  .search-bar input[type="text"]:focus {
    outline: none;
    border-color: var(--primary);
    box-shadow: 0 0 0 3px rgba(79,70,229,0.1);
  }
  .search-bar select {
    padding: 0.5rem 0.875rem;
    border: 1px solid var(--border);
    border-radius: var(--radius);
    font-size: 0.875rem;
    font-family: inherit;
    background: var(--surface);
    color: var(--text-primary);
    transition: border-color 0.15s ease;
  }
  .search-bar select:focus {
    outline: none;
    border-color: var(--primary);
    box-shadow: 0 0 0 3px rgba(79,70,229,0.1);
  }
  .recipe-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 1.25rem;
  }
  .recipe-card {
    background: var(--surface);
    border-radius: var(--radius-lg);
    padding: 1.5rem;
    box-shadow: var(--shadow);
    border: 1px solid var(--border);
    transition: all 0.2s ease;
    display: flex;
    flex-direction: column;
  }
  .recipe-card:hover {
    box-shadow: var(--shadow-lg);
    border-color: var(--border-hover);
  }
  .recipe-card h3 {
    font-size: 1.05rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: var(--text-primary);
    letter-spacing: -0.01em;
  }
  .recipe-card h3 a {
    text-decoration: none;
    color: inherit;
    transition: color 0.15s ease;
  }
  .recipe-card h3 a:hover { color: var(--primary); }
  .recipe-card p {
    font-size: 0.875rem;
    color: var(--text-secondary);
    margin-bottom: 1rem;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    line-height: 1.5;
    flex: 1;
  }
  .recipe-meta {
    display: flex;
    gap: 0.625rem;
    font-size: 0.75rem;
    color: var(--text-muted);
    flex-wrap: wrap;
    align-items: center;
    padding-top: 0.75rem;
    border-top: 1px solid var(--border);
  }
  .recipe-meta span {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
  }
  .badge {
    display: inline-block;
    padding: 0.15rem 0.5rem;
    border-radius: 9999px;
    font-size: 0.7rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.025em;
  }
  .badge-easy { background: #ecfdf5; color: #059669; }
  .badge-medium { background: #fffbeb; color: #d97706; }
  .badge-hard { background: #fef2f2; color: #dc2626; }
  .recipe-count {
    font-size: 0.875rem;
    color: var(--text-muted);
    font-weight: 500;
  }
  .empty-state {
    text-align: center;
    padding: 4rem 2rem;
    color: var(--text-muted);
  }
  .empty-state p { font-size: 1rem; margin-bottom: 1rem; }
</style>

<div class="index-header">
  <h2>Pancake Recipes</h2>
  <span class="recipe-count"><%= @recipe_count %> recipes</span>
</div>

<%= form_tag recipes_path, method: :get, class: "search-bar" do %>
  <%= text_field_tag :search, params[:search], placeholder: "Search recipes..." %>
  <%= select_tag :difficulty, options_for_select([["All Difficulties", ""], "easy", "medium", "hard"], params[:difficulty]) %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
  <% if params[:search].present? || params[:difficulty].present? %>
    <%= link_to "Clear", recipes_path, class: "btn btn-secondary" %>
  <% end %>
<% end %>

<div class="recipe-grid">
  <% @recipes.each do |recipe| %>
    <div class="recipe-card">
      <h3><%= link_to recipe.name, recipe %></h3>
      <p><%= recipe.description %></p>
      <div class="recipe-meta">
        <span class="badge badge-<%= recipe.difficulty %>"><%= recipe.difficulty %></span>
        <% if recipe.total_time_minutes > 0 %>
          <span><%= recipe.total_time_minutes %> min</span>
        <% end %>
        <% if recipe.servings %>
          <span><%= recipe.servings %> servings</span>
        <% end %>
        <span>&#9733; <%= recipe.average_rating %>/5 (<%= recipe.reviews.size %>)</span>
      </div>
    </div>
  <% end %>
</div>

<% if @recipes.empty? %>
  <div class="empty-state">
    <p>No recipes found.</p>
    <%= link_to "Create one!", new_recipe_path, class: "btn btn-primary" %>
  </div>
<% end %>
